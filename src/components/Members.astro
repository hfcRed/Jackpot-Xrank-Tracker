  {
    name: "Leafi",
    icon: "/images/profiles/Leafi.webp",
    socials: {
      youtube: "https://www.youtube.com/channel/UCObOP_107KEEb9HibWtMRhA",
      twitch: "https://www.twitch.tv/777_leafi",
      twitter: "https://twitter.com/Leafiiii",
    },
  },
  {
    name: "Jared",
    icon: "/images/profiles/Jared.webp",
    socials: {
      youtube: "https://www.youtube.com/channel/UCRv4Yd0SWCidAXGZf-bzIKw",
      twitch: "https://www.twitch.tv/777_jared",
      twitter: "https://twitter.com/_isjared_",
    },
  },
  {
    name: "Madness",
    icon: "/images/profiles/Madness.webp",
    socials: {
      twitch: "https://www.twitch.tv/madnesssvn",
      twitter: "https://twitter.com/MadnessSVN",
    },
  },
  {
    name: ".q",
    icon: "/images/profiles/dotqueue.webp",
    socials: {
      twitch: "https://www.twitch.tv/dotqueue",
      twitter: "https://twitter.com/Dotqueue",
    },
  },
];
---

<section
  class="members bg-backgroundDarker bg-shine border-1 border-border rounded-xl p-4 ssm:p-8 flex flex-col gap-4 shadow-lg my-20"
>
  <h2 class="text-xl text-center font-Blitz-Bold pb-4 border-b-1 border-border">
    Members
  </h2>
  <div class="ssm:px-4 my-4">
    <img
      class="rounded-lg w-full h-full"
      src="/images/banner.webp"
      alt="drawing of the jackpot team members"
    />
  </div>
  {
    members.map((member) => (
      <div class="flex flex-col ssm:flex-row p-4 gap-4 bg-backgroundLight rounded-lg justify-between bg-shinesmall items-center">
        <div class="flex gap-4 items-center">
          <img
            class="rounded-full h-10 w-10"
            src={member.icon}
            alt={`${member.name} profile picture`}
          />
          <p class="text-xl">{member.name}</p>
        </div>
        <div class="flex gap-4 items-center">
          {Object.entries(member.socials).map(([key, value]) => (
            <a href={value} target="_blank">
              <img
                class="h-10 w-10 hover:-rotate-12 hover:scale-105 transition-all duration-200"
                src={`/images/socials/${key}.webp`}
                alt={key}
              />
            </a>
          ))}
        </div>
      </div>
    ))
  }
</section>
