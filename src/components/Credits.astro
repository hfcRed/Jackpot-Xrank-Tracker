---
const credits = [
  {
    name: "hfcRed",
    role: "Frontend and OBS integration",
    icon: "/images/profiles/hfcRed.webp",
    socials: {
      twitter: "https://twitter.com/hfcRedddd",
      github: "https://github.com/hfcRed",
    },
  },
  {
    name: "Joy",
    role: "Backend and data collection",
    icon: "/images/profiles/Joy.webp",
    socials: {
      twitter: "https://twitter.com/JoyTheDataNerd",
      github: "https://github.com/cesaregarza",
    },
  },
  {
    name: "Leanny",
    role: "Game data and images",
    icon: "/images/profiles/Leanny.webp	",
    socials: {
      twitter: "https://twitter.com/LeanYoshi",
      github: "https://github.com/Leanny",
    },
  },
  {
    name: "NorthWestWind",
    role: "Splatoon fonts",
    icon: "/images/profiles/NorthWestWind.gif",
    socials: {
      twitch: "https://www.twitch.tv/northwestwindnww",
      github: "https://github.com/North-West-Wind",
    },
  },
];
---

<section
  class="credits bg-backgroundDarker bg-shine border-1 border-border rounded-xl p-4 ssm:p-8 flex flex-col gap-4 shadow-lg my-20"
>
  <h2
    class="text-xl text-center font-Blitz-Bold pb-4 mb-4 border-b-1 border-border"
  >
    Credits
  </h2>
  {
    credits.map((credit) => (
      <div class="flex flex-col ssm:flex-row p-4 gap-4 bg-backgroundLight rounded-lg justify-between bg-shinesmall items-center">
        <div class="flex flex-col items-center ssm:items-start">
          <div class="flex gap-4 items-center">
            <img
              class="rounded-full h-10 w-10"
              src={credit.icon}
              alt={`${credit.name} profile picture`}
            />
            <p class="text-xl">{credit.name}</p>
          </div>
          <p class="text-textSecondary mt-2">{credit.role}</p>
        </div>
        <div class="flex gap-4 items-center">
          {Object.entries(credit.socials).map(([key, value]) => (
            <a href={value} target="_blank">
              <img
                class="h-10 w-10 hover:-rotate-12 hover:scale-105 transition-all duration-200"
                src={`/images/socials/${key}.webp`}
                alt={key}
              />
            </a>
          ))}
        </div>
      </div>
    ))
  }
</section>
