---
const filters = [
  {
    name: "zones",
    icon: "/images/zones.webp",
  },
  {
    name: "tower",
    icon: "/images/tower.webp",
  },
  {
    name: "rainmaker",
    icon: "/images/rainmaker.webp",
  },
  {
    name: "clam",
    icon: "/images/clam.webp",
  },
];
---

<div class="flex justify-center my-8">
  <div
    class="max-w-[45rem] w-full bg-backgroundDark/60 flex flex-col sm:flex-row justify-between items-center py-4 px-8 gap-4 item relative"
  >
    <div class="filters flex justify-center gap-4">
      {
        filters.map((filter) => (
          <button
            class:list={[
              `filter-${filter.name}`,
              "w-10 h-10 hover:-rotate-12 hover:scale-105 transition-all duration-200 border-2 border-transparent hover:border-backgroundLighter rounded-lg bg-backgroundLight p-1",
            ]}
          >
            <img
              class="z-10 top-0 left-0"
              src={filter.icon}
              alt={filter.name}
            />
          </button>
        ))
      }
    </div>
    <div>
      <p>New data: <span class="timer">15:00</span></p>
    </div>
  </div>
</div>

<style>
  .item::before {
    position: absolute;
    display: inline-block;
    content: "";
    background-color: inherit;
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    height: 100%;
    width: 66px;
    top: 0;
    left: -66px;
    mask: url("/images/paint-right.webp") repeat-y;
    -webkit-mask: url("/images/paint-right.webp") repeat-y;
    mask-size: 100% 200%;
  }

  .item::after {
    position: absolute;
    display: inline-block;
    content: "";
    background-color: inherit;
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    height: 100%;
    width: 66px;
    top: 0;
    right: -66px;
    mask: url("/images/paint-left.webp") repeat-y;
    -webkit-mask: url("/images/paint-left.webp") repeat-y;
    mask-size: 100% 200%;
  }
</style>
