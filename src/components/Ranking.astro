---
import ItemTemplate from "./ItemTemplate.astro";
---

<div class="mb-6 flex justify-center items-center">
  <img class="h-48 drop-shadow-crown float" src="/images/crown.webp" alt="" />
</div>
<div class="list flex flex-col gap-8 items-center"></div>
<ItemTemplate />
<button class="button mt-6 hidden">Test</button>

<style is:global>
  .float {
    animation: float 5s ease-in-out infinite;
  }

  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(10px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .slam {
    animation: slam 3s ease-in-out infinite;
    transform-origin: bottom center;
  }

  @keyframes slam {
    0% {
      transform: translateY(0px);
    }
    10% {
      transform: translateY(-100px);
      scale: 0.5 1.5;
    }
    20% {
      transform: translateY(-100px);
      scale: 0.5;
    }
    100% {
      transform: scale(1);
    }
  }

  .wave .item {
    animation: wave 1s ease-in-out forwards;
  }

  .wave .item:nth-child(1) {
    animation-delay: 0s;
  }

  .wave .item:nth-child(2) {
    animation-delay: 0.1s;
  }

  .wave .item:nth-child(3) {
    animation-delay: 0.2s;
  }

  .wave .item:nth-child(4) {
    animation-delay: 0.3s;
  }

  @keyframes wave {
    0% {
      transform: translateY(0px);
    }
    20% {
      transform: translateY(50px);
    }
    100% {
      transform: translateY(0px);
    }
  }
</style>

<script src="./ranking.js"></script>
