---
import Splashtag from "./Splashtag.astro";
---

<div
  class="item-template item hidden ssm:grid-cols-[0.65fr_1fr] rounded-xl items-center p-4 gap-4 ssm:justify-between max-w-[45rem] w-full bg-backgroundDark/50 to-bg-sl backdrop-blur-xl"
>
  <div class="flex items-center justify-around">
    <div class="item-place h-20 w-20"></div>
    <div class="flex flex-col items-center">
      <div
        class="item-power bg-gray-600 py-1 px-2 rounded-lg shadow-lg w-full text-center"
      >
      </div>
      <img class="item-image h-20" src="" alt="" />
    </div>
  </div>
  <Splashtag />
</div>

<style>
  .item-1 .item-place {
    background-image: url("../../public/images/medal-first.webp");
    background-size: cover;
  }

  .item-2 .item-place {
    background-image: url("../../public/images/medal-second.webp");
    background-size: cover;
  }

  .item-3 .item-place {
    background-image: url("../../public/images/medal-third.webp");
    background-size: cover;
  }

  .item-4 .item-place {
    background-image: url("../../public/images/medal-last.webp");
    background-size: cover;
  }
</style>
