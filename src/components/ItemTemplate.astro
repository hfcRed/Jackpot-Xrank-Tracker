---
import Splashtag from "./Splashtag.astro";
---

<div
  class="item-template hidden ssm:grid-cols-[0.5fr_1fr] rounded-xl items-center p-4 gap-2 ssm:justify-between max-w-[45rem] w-full bg-gradient-to-r from-slate-800/50 to-slate-600/50 to-bg-sl backdrop-blur-xl"
>
  <div class="flex items-center justify-around">
    <div class="item-place"></div>
    <div class="flex flex-col items-center gap-1">
      <div
        class="item-power bg-slate-600 py-1 px-2 rounded-full shadow-lg w-full text-center"
      >
      </div>
      <img class="item-image h-20" src="" alt="" />
    </div>
  </div>
  <Splashtag />
</div>

<style>
  .item-1 .item-place {
    color: rgb(235, 235, 40);
    font-size: 5rem;
  }

  .item-2 .item-place {
    color: rgb(220, 220, 220);
    font-size: 4rem;
  }

  .item-3 .item-place {
    color: rgb(210, 120, 35);
    font-size: 3rem;
  }

  .item-4 .item-place {
    color: rgb(130, 130, 130);
    font-size: 2rem;
  }
</style>
